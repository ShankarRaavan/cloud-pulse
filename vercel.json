{
  "version": 2,
  "builds": [
    {
      "src": "services/node-service/src/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "services/aws-service-js/src/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "services/python-runner/app.py",
      "use": "@vercel/python",
      "config": { "pip": "install --upgrade pip setuptools" }
    },
    {
      "src": "services/ai-service/src/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/**",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    {
      "source": "/api/node/(.*)",
      "destination": "/services/node-service/src/index.js"
    },
    {
      "source": "/api/aws/(.*)",
      "destination": "/services/aws-service-js/src/index.js"
    },
    {
      "source": "/api/python/(.*)",
      "destination": "/services/python-runner/app.py"
    },
    {
      "source": "/api/ai/(.*)",
      "destination": "/services/ai-service/src/index.js"
    },
    {
      "source": "/(.*)",
      "destination": "/frontend/$1"
    }
  ]
}
